
@{
    ViewBag.Title = "Cadastro";
}
<script src="~/Scripts/ScriptTela/TelaFuncionario.js"></script>
<script src="~/Scripts/jquery.js"></script>


<h2>Cadastro Funcionario</h2>


<div class="col-lg-6">
    <form class="form-horizontal" id="Form">
        <input type="hidden" class="form-control" id="Id" name="Id" value="@ViewBag.Id" />
        <div class="box-body">

            <div class="form-group">
                <label class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Nome" name="Nome" autocomplete="off" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Endereço</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Endereco" name="Endereco" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Login</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Login" name="Login" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Senha</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Senha" name="Senha" />
                </div>
            </div>
            <div id="resposta" style="display:none;"></div>
            <div class="form-group">

                <div class="col-lg-6">
                    <button type="button" id="ValidaCadastro" class="btn btn-success" data-toggle="modal"> Salvar</button>
                    <button type="button" id="Editar" name="Editar" class="btn btn-primary">Editar</button>
                    <button type="button" id="Excluir" name="Excluir" class="btn btn-danger">Excluir</button>
                </div>
            </div>
        </div>
    </form>
</div>

<!--Modal Confirmaçao-->
<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Salvar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Fechar</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Deseja salvar o cadastro?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="Salvar">Salvar</button>
            </div>
        </div>
    </div>
</div>

